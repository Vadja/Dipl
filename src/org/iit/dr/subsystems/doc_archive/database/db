DROP TABLE IF EXISTS ROLE;
CREATE TABLE ROLE(
ID LONG NOT NULL PRIMARY KEY AUTO_INCREMENT, 
NAME VARCHAR(255) NOT NULL);

DROP TABLE IF EXISTS USER;
CREATE TABLE USER(
ID LONG NOT NULL PRIMARY KEY AUTO_INCREMENT, 
FIRST_NAME VARCHAR(255) NOT NULL, 
LAST_NAME VARCHAR(255) NOT NULL, 
MIDLE_NAME VARCHAR(255) NOT NULL, 
ROLE_ID LONG NOT NULL DEFAULT '2', FOREIGN KEY(ROLE_ID) REFERENCES ROLE(ID) ON DELETE CASCADE ON UPDATE CASCADE) ;

DROP TABLE IF EXISTS DOC_TYPE;
CREATE TABLE DOC_TYPE(
ID LONG NOT NULL PRIMARY KEY AUTO_INCREMENT,
NAME VARCHAR(255) NOT NULL);

DROP TABLE IF EXISTS DOCUMENT;
CREATE TABLE DOCUMENT(
ID LONG NOT NULL PRIMARY KEY AUTO_INCREMENT, 
NAME VARCHAR(255) NOT NULL, 
LOAD_DATE DATE NOT NULL, 
CREATE_DATE DATE NOT NULL, 
DOC_DESCRIPTION VARCHAR(255), 
`FILE` LONGBLOB,
USER_ID LONG NOT NULL, 
FOREIGN KEY(USER_ID) REFERENCES USER(ID) ON DELETE CASCADE ON UPDATE CASCADE, 
TYPE_ID LONG NOT NULL DEFAULT '1', 
FOREIGN KEY(TYPE_ID) REFERENCES DOC_TYPE(ID) ON DELETE CASCADE ON UPDATE CASCADE);

SELECT * from DOCUMENT;
SELECT * from DOC_TYPE;
SELECT * from ROLE;